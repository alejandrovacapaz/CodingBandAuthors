@model  List<AuthorsDTOs.BookDetail>

@{ 
    ViewBag.Title = "Lista de Libros";
}

<h2>Lista de Libros</h2>

@if (@Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    <b>Titulo</b>
                </td>
                <td>
                    <b>Edición</b>
                </td>
                <td>
                    <b>Autores</b>
                </td>
                <td>
                    
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.titulo
                    </td>    
                    <td>
                        @item.edicion
                    </td>    
                    <td>
                        @item.autores
                    </td>   
                    <td>
                        @Html.ActionLink("Detalles", "Edit", new { id = @item.id}) @*luego habilitar la opcion de editar*@
                    </td>                      
                </tr>
            }
        </tbody>
    </table>
}