@model AuthorsDTOs.BookDetailABM

@{
    ViewBag.Title = "Editar ";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar Libro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.edicion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.edicion, new { htmlAttributes = new { @class = "form-control",  @id="edicion"} })
                @Html.ValidationMessageFor(model => model.edicion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Autores</label>
            <ul>
                @foreach (var item in Model.autores)
                {
                    if (@item.idChecked)
                    {
                        <li>
                            <input type="checkbox" checked>
                            <label>@item.nombre</label>
                            <input type="hidden" value="@item.id" id="bookId">
                        </li>
                    }
                    else
                    {
                        <li>
                            <input type="checkbox">
                            <label>@item.nombre</label>
                            <input type="hidden" value="@item.id" id="bookId">
                        </li>
                    }
                }
            </ul>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
